@{
    ViewData["Title"] = "gerenciamento";
}

<div class="text-center">
    <h1 class="display-4">lojas cadastradas</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loja in ViewBag.lojas) 
            {
                <tr>
                    <td>@loja.Nome</td>
                    <td>
                        <form action="/Home/Remover" method="post">
                            <button type="submit" class="btn btn-primary" name="id" value=@loja.Id>Remover</button>
                        </form>
                    </td>
                    <td>
                        <form action="/Home/Detalhes" method="post">
                            <button type="submit" class="btn btn-primary" name="id" value=@loja.Id>Detalhes</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
