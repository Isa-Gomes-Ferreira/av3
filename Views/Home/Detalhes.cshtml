@{
    ViewData["Title"] = "detalhes";
}

@model av3.Models.Loja

<div class="text-center">
    <h1 class="display-4">Detalhes</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Piso</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Loja/Kiosque</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.Id</th>
                <td>piso @Model.Piso</td>
                <td>@Model.Nome</td>
                <td>@Model.Descricao</td>
                <td>@Model.Tipo/td>
                <td>@Model.Email</td>
                <td>
                    <form action="/Home/Remover" method="post">
                        <button type="submit" class="btn btn-primary" name="id" value=@Model.Id>Remover</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>
